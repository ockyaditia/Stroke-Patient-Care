<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yarsi.skripsi.fragment.EmergencyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:contentDescription="@string/nav_emergency"
            android:src="@drawable/siren_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="@string/nav_emergency"
            android:textColor="@color/logo_color"
            android:textSize="40sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginBottom="30dp"
            android:background="@color/logo_color_alternate" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="30dp"
                android:text="@string/emergency_word1"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/call_ambulance"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/call2"
                android:text="@string/emergency_word11" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:layout_marginBottom="30dp"
            android:background="@color/logo_color_alternate" />

        <Button
            android:id="@+id/check_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/logo_color_botton"
            android:text="@string/emergency_word2"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/pertolongan_pertama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_color_botton"
            android:text="@string/emergency_word30"
            android:textColor="@android:color/white" />

    </LinearLayout>

</FrameLayout>
